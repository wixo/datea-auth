html(lang='en', data-ng-app='dateaAuth')
    head
        meta(charset='utf-8')
        title Datea.pe
        link(rel='stylesheet', href='css/app.css')
        link(href="//netdna.bootstrapcdn.com/bootstrap/3.0.1/css/bootstrap.min.css", rel="stylesheet")
        link(href="//netdna.bootstrapcdn.com/font-awesome/4.0.1/css/font-awesome.min.css", rel="stylesheet")

        script(type="text/javascript").
            if (window.location.href.indexOf('#_=_') > 0) {
                window.location = window.location.href.replace(/#.*/, '');
            }
    body(data-ng-cloak)

        nav.navbar.navbar-default(data-ng-controller="NavCtrl",role="navigation")
            .navbar-header
              a.navbar-brand(href="/") Datea.pe
            .navbar-collapse
                ul.nav.navbar-nav
                    li(data-access-level='accessLevels.anon', active-nav)
                        a(href='/login') Ingresar
                    li(data-access-level='accessLevels.anon', active-nav)
                        a(href='/register') Registrarse
                    li(data-access-level='accessLevels.user', active-nav)
                        a(href='/') Inicio
                    li(data-access-level='accessLevels.user', active-nav)
                        a(href='/profile') Mi perfil
                    li(data-access-level='accessLevels.admin', active-nav)
                        a(href='/admin') Admin
                    li(data-access-level='accessLevels.user')
                        a(href="", data-ng-click="logout()")
                            | Salir
                ul#userInfo.nav.navbar-nav.navbar-right(data-access-level='accessLevels.user')
                    li {{ user.username }}
                //- span.label(data-ng-class='{"label-info": user.role.title == userRoles.user.title, "label-success": user.role.title == userRoles.admin.title}') {{ user.role.title }}

        .container
            .alert.alert-danger(data-ng-bind="error", data-ng-show="error")
            div(data-ng-view='ng-view')

        script(src='http://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.4.4/underscore-min.js')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.js')
        script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular-cookies.js')
        script(src='/js/routingConfig.js')
        script(src='/js/app.js')
        script(src='/js/services.js')
        script(src='/js/controllers.js')
        script(src='/js/filters.js')
        script(src='/js/directives.js')

        script(type="text/ng-template", id="404")
            include partials/404
        script(type="text/ng-template", id="admin")
            include partials/admin
        script(type="text/ng-template", id="home")
            include partials/home
        script(type="text/ng-template", id="login")
            include partials/login
        script(type="text/ng-template", id="private")
            include partials/private
        script(type="text/ng-template", id="register")
            include partials/register